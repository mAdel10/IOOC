<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ioocllcdrdapp.iooc.activities.AddGroupActivity">

    <EditText
        android:id="@+id/addGroup_date_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/back_border_gray"
        android:fontFamily="@font/gotham_rounded_light"
        android:padding="8dp"
        android:text="@string/enter_date"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <EditText
        android:id="@+id/addGroup_time_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/back_border_gray"
        android:fontFamily="@font/gotham_rounded_light"
        android:padding="8dp"
        android:text="@string/enter_time"
        tools:ignore="Autofill,LabelFor,TextFields" />

    <Spinner
        android:id="@+id/addGroup_course_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp" />

    <Button
        android:id="@+id/addGroup_create_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/back_solid_accent"
        android:fontFamily="@font/gotham_rounded_medium"
        android:text="@string/create"
        android:textColor="@color/colorWhite" />

</LinearLayout>
